---
export interface Props {
  imagePc: string;
  imageSmartPhone: string;
  tittle?: string;
  subtitle?: string;
  button?: string;
}

const { imagePc, tittle, subtitle, imageSmartPhone, button } = Astro.props;
---

<div class="w-full">
  <!-- Imagen y texto para escritorio -->
  <div class="hidden lg:block">
    <div class="flex items-center justify-end h-96 relative">
      <img src={imagePc} alt={tittle} class="w-full h-full object-cover" />
      <div class="absolute w-1/3 right-28   p-3">
        <p class="letter-better-bold text-center text-3xl text-wrap">
          {tittle}
        </p>
        <br>
        <p class="letter-better text-center text-md">{subtitle}</p>
        <br>
        <button class="button ml-8 2xl:ml-28">
          <svg class="bell" viewBox="0 0 448 512"
            ><path
              d="M224 0c-17.7 0-32 14.3-32 32V49.9C119.5 61.4 64 124.2 64 200v33.4c0 45.4-15.5 89.5-43.8 124.9L5.3 377c-5.8 7.2-6.9 17.1-2.9 25.4S14.8 416 24 416H424c9.2 0 17.6-5.3 21.6-13.6s2.9-18.2-2.9-25.4l-14.9-18.6C399.5 322.9 384 278.8 384 233.4V200c0-75.8-55.5-138.6-128-150.1V32c0-17.7-14.3-32-32-32zm0 96h8c57.4 0 104 46.6 104 104v33.4c0 47.9 13.9 94.6 39.7 134.6H72.3C98.1 328 112 281.3 112 233.4V200c0-57.4 46.6-104 104-104h8zm64 352H224 160c0 17 6.7 33.3 18.7 45.3s28.3 18.7 45.3 18.7s33.3-6.7 45.3-18.7s18.7-28.3 18.7-45.3z"
            ></path></svg
          >
          {button}
          <div class="arrow">›</div>
        </button>
      </div>
    </div>
  </div>
  <!-- Imagen para dispositivos móviles -->
  <div class="block  lg:hidden">
    <img src={imageSmartPhone} alt={tittle} class="w-full h-64 object-cover" />
    <div class="w-full p-4">
      <p class="letter-better-bold text-center text-2xl text-wrap">{tittle}</p>
      <p class="letter-better text-center text-md">{subtitle}</p>
      <button class="button2">
        <svg class="bell2" viewBox="0 0 448 512"
          ><path
            d="M224 0c-17.7 0-32 14.3-32 32V49.9C119.5 61.4 64 124.2 64 200v33.4c0 45.4-15.5 89.5-43.8 124.9L5.3 377c-5.8 7.2-6.9 17.1-2.9 25.4S14.8 416 24 416H424c9.2 0 17.6-5.3 21.6-13.6s2.9-18.2-2.9-25.4l-14.9-18.6C399.5 322.9 384 278.8 384 233.4V200c0-75.8-55.5-138.6-128-150.1V32c0-17.7-14.3-32-32-32zm0 96h8c57.4 0 104 46.6 104 104v33.4c0 47.9 13.9 94.6 39.7 134.6H72.3C98.1 328 112 281.3 112 233.4V200c0-57.4 46.6-104 104-104h8zm64 352H224 160c0 17 6.7 33.3 18.7 45.3s28.3 18.7 45.3 18.7s33.3-6.7 45.3-18.7s18.7-28.3 18.7-45.3z"
          ></path></svg
        >
        {button}
        <div class="arrow2">›</div>
      </button>
    </div>
  </div>
</div>

<style>
  .letter-better-bold {
    font-family: "Poppins";
    font-weight: bold;
  }
  .letter-better {
    font-family: "Poppins";
  }

  .button {
    width: 400px;
    height: 40px;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    -webkit-box-pack: start;
    -ms-flex-pack: start;
    justify-content: flex-start;
    gap: 10px;
    padding: 0px 15px;
    background-color: rgb(66, 66, 66);
    border-radius: 10px;
    color: white;
    border: none;
    position: relative;
    cursor: pointer;
    -webkit-transition-duration: 0.2s;
    transition-duration: 0.2s;
  }
  .bell {
    width: 13px;
  }
  .bell path {
    fill: #E56399;
  }
  .arrow {
    position: absolute;
    right: 0;
    width: 30px;
    height: 100%;
    font-size: 18px;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    justify-content: center;
  }
  .button:hover {
    background-color: rgb(77, 77, 77);
    -webkit-transition-duration: 0.2s;
    transition-duration: 0.2s;
  }

  .button:hover .arrow {
    -webkit-animation: slide-right 0.6s ease-out both;
    animation: slide-right 0.6s ease-out both;
  }
  /* arrow animation */
  @-webkit-keyframes slide-right {
    0% {
      -webkit-transform: translateX(-10px);
      transform: translateX(-10px);
      opacity: 0;
    }
    100% {
      -webkit-transform: translateX(0);
      transform: translateX(0);
      opacity: 1;
    }
  }
  @keyframes slide-right {
    0% {
      -webkit-transform: translateX(-10px);
      transform: translateX(-10px);
      opacity: 0;
    }
    100% {
      -webkit-transform: translateX(0);
      transform: translateX(0);
      opacity: 1;
    }
  }
  .button:active {
    -webkit-transform: translate(1px, 1px);
    -ms-transform: translate(1px, 1px);
    transform: translate(1px, 1px);
    -webkit-transition-duration: 0.2s;
    transition-duration: 0.2s;
  }

  .button2 {
  width: 350px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  gap: 10px;
  word-wrap: initial;
  padding: 0px 15px;
  background-color: rgb(66, 66, 66);
  border-radius: 10px;
  color: white;
  border: none;
  position: relative;
  cursor: pointer;
  transition-duration: .2s;
}

.bell2 {
