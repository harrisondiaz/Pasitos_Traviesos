---
export interface Props {
  imagePc: string;
  imageSmartPhone: string;
  tittle?: string;
  subtitle?: string;
}

const { imagePc, tittle, subtitle, imageSmartPhone } = Astro.props;
---

<div class="w-full">
  <!-- Imagen y texto para escritorio -->
  <div class="hidden lg:block">
    <div class="flex items-center justify-center h-96 relative">
      <img src={imagePc} alt={tittle} class="w-full h-full object-cover" />
      <div class="absolute w-1/3 right-28 p-4">
        <p class="letter-better-bold text-center text-4xl text-wrap">
          {tittle}
        </p>
        <p class="letter-better text-center text-md">{subtitle}</p>
      </div>
    </div>
  </div>
  <!-- Imagen para dispositivos mÃ³viles -->
  <div class="block lg:hidden">
    <img src={imageSmartPhone} alt={tittle} class="w-full h-64 object-cover" />
    <div class="w-full p-4">
      <p class="letter-better-bold text-center text-2xl text-wrap">{tittle}</p>
      <p class="letter-better text-center text-md">{subtitle}</p>
    </div>
  </div>
</div>

<style>
  .letter-better-bold {
    font-family: "Poppins";
    font-weight: bold;
  }
  .letter-better {
    font-family: "Poppins";
  }
</style>
